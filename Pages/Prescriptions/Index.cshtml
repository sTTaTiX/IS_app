@page
@model HealthcareApp.Pages_Prescriptions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Prescriptions</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Medication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Dosage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].DateIssued)
            </th>
            <th>
                Doctor
            </th>
            <th>
                Patient
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Prescription) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Medication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dosage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateIssued)
            </td>
            <td>
                @item.Doctor?.FullName
            </td>
            <td>
                @item.Patient?.FullName
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PrescriptionID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PrescriptionID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PrescriptionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
